{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "AppointmentDb": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=HMS_MS_APPOINTMENT;Integrated Security=True;Connect Timeout=30;Encrypt=True;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False;Command Timeout=30"
  },

  "JwtSettings": {
    "Secret": "YourVerySecureSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "HMS.Authentication",
    "Audience": "HMS.Clients",
    "ExpiryInHours": 1
  },

  "ServiceEndpoints": {
    "Authentication": "https://localhost:5001",
    "Patient": "https://localhost:5002",
    "Doctor": "https://localhost:5003",
    "Staff": "https://localhost:5004",
    "MedicalRecords": "https://localhost:5006",
    "Billing": "https://localhost:5007",
    "Pharmacy": "https://localhost:5008",
    "Laboratory": "https://localhost:5009",
    "Notification": "https://localhost:5010"
  },

  "CorsSettings": {
    "AllowedOrigins": "https://web.hospital.com,https://admin.hospital.com,http://localhost:5000,http://localhost:3000,https://localhost:3000,https://localhost:7047"
  },

  "AppointmentSettings": {
    "DefaultSlotDurationMinutes": 30,
    "MaxAdvanceBookingDays": 90,
    "MinAdvanceBookingHours": 2,
    "ReminderHoursBeforeAppointment": 24,
    "SecondReminderHoursBeforeAppointment": 2,
    "AutoCancelNoShowAfterMinutes": 30,
    "WaitlistExpiryDays": 7,
    "AllowOverbooking": false,
    "MaxPatientsPerSlot": 1
  },

  "NotificationSettings": {
    "EnableSmsReminders": true,
    "EnableEmailReminders": true,
    "EnablePushNotifications": true,
    "SendConfirmationOnBooking": true,
    "SendReminderOnDayBefore": true,
    "SendReminderTwoHoursBefore": true
  }
}