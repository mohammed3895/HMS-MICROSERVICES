@using HMS.Web.Models
@using HMS.Web.Models.ViewModels.Appointment
@model CreateAppointmentViewModel
@{
    ViewData["Title"] = "Book an Appointment";
}

<div style="max-width: 700px; margin: 0 auto; padding: 2rem;">
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-calendar-plus"></i> Book an Appointment</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Appointment" asp-action="Create">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <div class="form-group">
                    <label class="form-label">Select Doctor</label>
                    <select asp-for="DoctorId" class="form-control" required>
                        <option value="">-- Choose a Doctor --</option>
                        @if (ViewBag.Doctors != null)
                        {
                            @foreach (var doctor in ViewBag.Doctors)
                            {
                                <option value="@doctor.DoctorId">
                                    @doctor.FullName - @doctor.Specialization
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Appointment Date & Time</label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control" required />
                    <small style="color: var(--text-tertiary);">Select your preferred date and time</small>
                </div>

                <div class="form-group">
                    <label class="form-label">Reason for Visit</label>
                    <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Describe your symptoms or reason for visit..."></textarea>
                </div>

                <div style="display: flex; gap: 1rem;">
                    <button type="submit" class="btn btn-primary btn-lg" style="flex: 1;">
                        <i class="fas fa-check"></i> Book Appointment
                    </button>
                    <a href="@Url.Action("Index", "Appointment")" class="btn btn-secondary btn-lg" style="flex: 1;">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
