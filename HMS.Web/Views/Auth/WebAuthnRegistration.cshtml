@{
    ViewData["Title"] = "Setup Security Key";
}

<div style="max-width: 600px; margin: 0 auto; padding: 2rem;">
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-key"></i> Register Security Key</h2>
        </div>
        <div class="card-body">
            <div class="webauthn-info">
                <div class="info-box">
                    <i class="fas fa-shield-alt"></i>
                    <h4>What is a Security Key?</h4>
                    <p>A security key is a physical device that provides the strongest form of two-factor authentication.</p>
                </div>

                <div class="supported-devices">
                    <h5>Supported Devices:</h5>
                    <ul>
                        <li><i class="fas fa-check"></i> Yubikey</li>
                        <li><i class="fas fa-check"></i> Google Titan</li>
                        <li><i class="fas fa-check"></i> Microsoft Hello</li>
                        <li><i class="fas fa-check"></i> Apple Touch ID / Face ID</li>
                    </ul>
                </div>

                <button type="button" class="btn btn-primary btn-lg btn-block" onclick="beginWebAuthnRegistration()">
                    <i class="fas fa-usb"></i> Register Security Key
                </button>

                <div style="margin-top: 1rem; padding: 1rem; background: var(--bg-secondary); border-radius: 8px;">
                    <h5><i class="fas fa-info-circle"></i> Instructions</h5>
                    <ol style="margin: 0; padding-left: 1.5rem;">
                        <li>Click the button above</li>
                        <li>Insert your security key when prompted</li>
                        <li>Touch the key when it lights up</li>
                        <li>Follow any additional prompts</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    async function beginWebAuthnRegistration() {
        // WebAuthn registration logic
        console.log('Starting WebAuthn registration...');
    }
</script>

<style>
    .webauthn-info {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .info-box {
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.1), rgba(6, 182, 212, 0.1));
        border-left: 4px solid var(--primary);
        border-radius: 8px;
    }

    .info-box i {
        font-size: 1.5rem;
        color: var(--primary);
        margin-bottom: 0.5rem;
        display: block;
    }

    .info-box h4 {
        margin: 0 0 0.5rem 0;
    }

    .info-box p {
        margin: 0;
    }

    .supported-devices {
        padding: 1.5rem;
        background: var(--bg-secondary);
        border-radius: 8px;
    }

    .supported-devices h5 {
        margin-top: 0;
    }

    .supported-devices ul {
        list-style: none;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
    }

    .supported-devices li {
        color: var(--text-secondary);
    }

    .supported-devices i {
        color: var(--success);
        margin-right: 0.5rem;
    }
</style>