@{
    ViewData["Title"] = "Billing & Payments";
}

<div class="page-header">
    <h1><i class="fas fa-receipt"></i> Billing & Payments</h1>
    <p>View your billing history and payment status</p>
</div>

<div class="billing-container">
    <div class="billing-summary-cards">
        <div class="summary-card">
            <h4>Total Due</h4>
            <div class="amount">$1,250.00</div>
        </div>
        <div class="summary-card">
            <h4>Paid</h4>
            <div class="amount paid">$850.00</div>
        </div>
        <div class="summary-card">
            <h4>Outstanding</h4>
            <div class="amount danger">$400.00</div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3><i class="fas fa-file-invoice"></i> Billing History</h3>
        </div>
        <div class="card-body">
            <table class="billing-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Service</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Jan 15, 2025</td>
                        <td>General Checkup</td>
                        <td>$150.00</td>
                        <td><span class="badge badge-success">Paid</span></td>
                        <td><a href="#" class="btn btn-xs btn-link">Download</a></td>
                    </tr>
                    <tr>
                        <td>Dec 20, 2024</td>
                        <td>Lab Tests</td>
                        <td>$250.00</td>
                        <td><span class="badge badge-success">Paid</span></td>
                        <td><a href="#" class="btn btn-xs btn-link">Download</a></td>
                    </tr>
                    <tr>
                        <td>Dec 10, 2024</td>
                        <td>Specialist Consultation</td>
                        <td>$400.00</td>
                        <td><span class="badge badge-warning">Pending</span></td>
                        <td><a href="#" class="btn btn-xs btn-link">Pay Now</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .billing-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .billing-summary-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .summary-card {
        background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 1.5rem;
    }

        .summary-card h4 {
            margin: 0 0 0.5rem 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .summary-card .amount {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
        }

            .summary-card .amount.paid {
                color: var(--success);
            }

            .summary-card .amount.danger {
                color: var(--danger);
            }

    .billing-table {
        width: 100%;
        border-collapse: collapse;
    }

        .billing-table th {
            padding: 1rem;
            text-align: left;
            border-bottom: 2px solid var(--border);
            font-weight: 600;
            background: var(--bg-secondary);
        }

        .billing-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--border);
        }

        .billing-table tr:hover {
            background: var(--bg-secondary);
        }

    @@media (max-width: 768px) {
        .billing-table {
            font-size: 0.9rem;
        }

            .billing-table th,
            .billing-table td {
                padding: 0.75rem;
            }
    }
</style>