@using HMS.Web.Models
@using HMS.Web.Models.DTOs.Doctor
@model DoctorDto
@{
    ViewData["Title"] = Model.FullName;
}

<div class="doctor-details">
    <a href="@Url.Action("Index", "Doctor")" class="btn btn-sm btn-secondary" style="margin-bottom: 1rem;">
        <i class="fas fa-arrow-left"></i> Back to Doctors
    </a>

    <div class="doctor-header-section">
        <div class="doctor-avatar-large">
            @Model.FullName.Substring(0, 1).ToUpper()
        </div>
        <div class="doctor-header-info">
            <h1>@Model.FullName</h1>
            <p class="specialization-large">@Model.Specialization</p>
            <div class="rating-section">
                <div class="rating">
                    <i class="fas fa-star"></i> 4.8 (127 reviews)
                </div>
                <div class="availability">
                    <span class="badge badge-success">Available</span>
                </div>
            </div>
        </div>
        <div class="doctor-actions-large">
            <a asp-controller="Appointment" asp-action="Create" asp-route-doctorId="@Model.DoctorId" class="btn btn-primary btn-lg">
                <i class="fas fa-calendar-plus"></i> Book Appointment
            </a>
            <a href="tel:@Model.Phone" class="btn btn-secondary btn-lg">
                <i class="fas fa-phone"></i> Call
            </a>
        </div>
    </div>

    <div class="doctor-info-grid">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-id-card"></i> Professional Information</h3>
            </div>
            <div class="card-body">
                <div class="info-list">
                    <div class="info-item">
                        <label>License Number</label>
                        <span>@Model.LicenseNumber</span>
                    </div>
                    <div class="info-item">
                        <label>Email</label>
                        <span>@Model.Email</span>
                    </div>
                    <div class="info-item">
                        <label>Phone</label>
                        <span>@Model.Phone</span>
                    </div>
                    <div class="info-item">
                        <label>Specialization</label>
                        <span>@Model.Specialization</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-clock"></i> Availability</h3>
            </div>
            <div class="card-body">
                <div class="schedule-table">
                    <div class="schedule-item">
                        <span>Monday - Friday</span>
                        <span>9:00 AM - 5:00 PM</span>
                    </div>
                    <div class="schedule-item">
                        <span>Saturday</span>
                        <span>10:00 AM - 2:00 PM</span>
                    </div>
                    <div class="schedule-item">
                        <span>Sunday</span>
                        <span>Closed</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .doctor-details {
        max-width: 1000px;
        margin: 0 auto;
    }

    .doctor-header-section {
        display: grid;
        grid-template-columns: 200px 1fr auto;
        gap: 2rem;
        margin-bottom: 2rem;
        padding: 2rem;
        background: var(--bg-primary);
        border: 1px solid var(--border);
        border-radius: 12px;
        align-items: start;
    }

    .doctor-avatar-large {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        font-weight: 700;
    }

    .doctor-header-info h1 {
        margin-bottom: 0.5rem;
    }

    .specialization-large {
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .rating-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .rating i {
            color: var(--warning);
        }

    .doctor-actions-large {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .doctor-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .info-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border);
    }

        .info-item label {
            font-weight: 600;
            color: var(--text-secondary);
        }

    .schedule-table {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .schedule-item {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem;
        background: var(--bg-secondary);
        border-radius: 6px;
    }

    @@media (max-width: 768px) {
        .doctor-header-section {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .doctor-avatar-large {
            margin: 0 auto;
        }

        .rating-section {
            justify-content: center;
            flex-wrap: wrap;
        }
    }
</style>
