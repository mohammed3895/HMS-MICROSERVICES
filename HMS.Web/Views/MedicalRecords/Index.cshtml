@{
    ViewData["Title"] = "Medical Records";
}

<div class="page-header">
    <h1><i class="fas fa-file-medical"></i> Medical Records</h1>
    <p>Your complete medical history and reports</p>
</div>

<div class="records-container">
    <div class="card">
        <div class="card-header">
            <h3><i class="fas fa-history"></i> Medical History</h3>
            <div class="filter-controls">
                <input type="search" placeholder="Search records..." class="form-control" />
            </div>
        </div>
        <div class="card-body">
            <div class="records-timeline">
                <div class="timeline-item">
                    <div class="timeline-date">Jan 15, 2025</div>
                    <div class="timeline-content">
                        <h5>General Checkup</h5>
                        <p>Regular health examination - All vitals normal</p>
                        <a href="#" class="btn btn-xs btn-link">View Report</a>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-date">Dec 20, 2024</div>
                    <div class="timeline-content">
                        <h5>Lab Tests</h5>
                        <p>Blood work and urinalysis completed</p>
                        <a href="#" class="btn btn-xs btn-link">View Results</a>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-date">Nov 10, 2024</div>
                    <div class="timeline-content">
                        <h5>Specialist Consultation</h5>
                        <p>Cardiology consultation with Dr. Sarah Jones</p>
                        <a href="#" class="btn btn-xs btn-link">View Notes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .records-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .filter-controls {
        min-width: 250px;
    }

    .records-timeline {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .timeline-item {
        display: flex;
        gap: 1.5rem;
        padding: 1.5rem;
        background: var(--bg-secondary);
        border-radius: 8px;
        border-left: 4px solid var(--primary);
    }

    .timeline-date {
        flex-shrink: 0;
        min-width: 120px;
        font-weight: 600;
        color: var(--primary);
    }

    .timeline-content {
        flex: 1;
    }

        .timeline-content h5 {
            margin: 0 0 0.5rem 0;
        }

        .timeline-content p {
            margin: 0 0 0.75rem 0;
            color: var(--text-secondary);
        }
</style>