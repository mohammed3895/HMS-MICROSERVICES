                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
                <span class="badge">12</span>
            </a>

            <div class="nav-item has-submenu @(ViewContext.RouteData.Values["controller"]?.ToString() == "Patient" ? "expanded" : "")">
                <div class="nav-link">
                    <i class="fas fa-user-injured"></i>
                    <span>Patients</span>
                    <i class="fas fa-chevron-right arrow"></i>
                </div>
                <div class="submenu">
                    <a asp-controller="Patient" asp-action="Index" class="submenu-item">All Patients</a>
                    <a asp-controller="Patient" asp-action="Create" class="submenu-item">Add New Patient</a>
                    <a asp-controller="Patient" asp-action="Admitted" class="submenu-item">Admitted Patients</a>
                    <a asp-controller="Patient" asp-action="Discharged" class="submenu-item">Discharged</a>
                </div>
            </div>

            <a asp-controller="Doctor" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Doctor" ? "active" : "")">
                <i class="fas fa-user-md"></i>
                <span>Doctors</span>
                <span class="badge badge-primary">3</span>
            </a>

            <div class="nav-item has-submenu @(ViewContext.RouteData.Values["controller"]?.ToString() == "Appointment" ? "expanded" : "")">
                <div class="nav-link">
                    <i class="fas fa-calendar-check"></i>
                    <span>Appointments</span>
                    <i class="fas fa-chevron-right arrow"></i>
                    <span class="badge badge-warning">8</span>
                </div>
                <div class="submenu">
                    <a asp-controller="Appointment" asp-action="Index" class="submenu-item">Today's Schedule</a>
                    <a asp-controller="Appointment" asp-action="Pending" class="submenu-item">Pending</a>
                    <a asp-controller="Appointment" asp-action="Create" class="submenu-item">New Appointment</a>
                    <a asp-controller="Appointment" asp-action="Calendar" class="submenu-item">Calendar View</a>
                </div>
            </div>

            <a asp-controller="MedicalRecords" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "MedicalRecords" ? "active" : "")">
                <i class="fas fa-file-medical"></i>
                <span>Medical Records</span>
            </a>

            <a asp-controller="Billing" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Billing" ? "active" : "")">
                <i class="fas fa-money-bill-wave"></i>
                <span>Billing & Payments</span>
                <span class="badge badge-success">$89k</span>
            </a>
        </div>

        <div class="menu-section">
            <p class="menu-label">DEPARTMENTS</p>

            <a asp-controller="Pharmacy" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Pharmacy" ? "active" : "")">
                <i class="fas fa-prescription-bottle-alt"></i>
                <span>Pharmacy</span>
                <span class="badge badge-danger">15</span>
            </a>

            <a asp-controller="Laboratory" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Laboratory" ? "active" : "")">
                <i class="fas fa-flask"></i>
                <span>Laboratory</span>
                <span class="badge">42</span>
            </a>

            <a asp-controller="Radiology" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Radiology" ? "active" : "")">
                <i class="fas fa-x-ray"></i>
                <span>Radiology</span>
            </a>

            <a asp-controller="Emergency" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Emergency" ? "active" : "")">
                <i class="fas fa-ambulance"></i>
                <span>Emergency</span>
            </a>
        </div>

        <div class="menu-section">
            <p class="menu-label">MANAGEMENT</p>

            <a asp-controller="Staff" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Staff" ? "active" : "")">
                <i class="fas fa-users"></i>
                <span>Staff Management</span>
            </a>

            <a asp-controller="Inventory" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory" ? "active" : "")">
                <i class="fas fa-warehouse"></i>
                <span>Inventory</span>
            </a>

            <a asp-controller="Reports" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")">
                <i class="fas fa-chart-bar"></i>
                <span>Reports & Analytics</span>
            </a>
        </div>

        <div class="menu-section">
            <p class="menu-label">PERSONAL</p>

            <a asp-controller="Inbox" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inbox" ? "active" : "")">
                <i class="fas fa-inbox"></i>
                <span>Inbox</span>
                <span class="badge badge-primary">1253</span>
            </a>

            <a asp-controller="Calendar" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Calendar" ? "active" : "")">
                <i class="fas fa-calendar-alt"></i>
                <span>Calendar</span>
                <span class="badge badge-warning">4</span>
            </a>

            <a asp-controller="Todo" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Todo" ? "active" : "")">
                <i class="fas fa-tasks"></i>
