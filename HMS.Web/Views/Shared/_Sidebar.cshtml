        </a>
        <a asp-controller="Appointment" asp-action="Index" class="nav-icon" title="Appointments">
            <i class="fas fa-calendar-check"></i>
            <span class="icon-badge">8</span>
        </a>
        <a asp-controller="Inbox" asp-action="Index" class="nav-icon" title="Inbox">
            <i class="fas fa-inbox"></i>
            <span class="icon-badge">1253</span>
        </a>
        <a asp-controller="Emergency" asp-action="Index" class="nav-icon" title="Emergency">
            <i class="fas fa-ambulance"></i>
        </a>
    </div>
</aside>

